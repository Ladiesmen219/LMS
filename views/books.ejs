<% include partials/header %>

<script>

  window.onload = () => {
  
    var queryValue = "<%= q %>";
    var limitValue = "<%= limit %>";
    var searchNodeInit = document.getElementById('searchQuery');
    
    if(limitValue != "24") { // 24 is default pagination limit
      document.getElementById('perPage').value = limitValue;
    }

    if(queryValue.length) {
      searchNodeInit.value = queryValue;
    } else {
      searchNodeInit.setAttribute('placeholder', "Search by Book title, author, category and isbn")
    }
  }

  function reset() {
    window.location.href = "/books"; 
  }
 
  function setPerPage() {
    var limit = document.getElementById('perPage').value;
    var query = window.location.search;
    var queryValue = "<%= q %>";
    var page = 1;
   
    if(query.length) {
      if(query.includes("limit")) {
        query = queryValue ? `q=${queryValue}&limit=${limit}&page=${page}` : `limit=${limit}&page=${page}`;
        window.location.href = `/books?${query}`;
      } else {
        query = `${query}&limit=${limit}&page=${page}`;
        window.location.href = `/books${query}`;
      }
    } else {
      window.location.href = `/books?limit=${limit}&page=${page}`;
    }
  }

  function search() {
    var searchNode = document.getElementById('searchQuery');
    
    if(!searchNode.value) {
      alert("Search field is empty");
      return;
    }
    window.location.href = `/books?q=${searchNode.value}`
  }
</script>

